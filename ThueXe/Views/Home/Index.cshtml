@using ThueXe.Models
@model ThueXe.ViewModel.HomeViewModel
@{
    var config = (ConfigSite)HttpContext.Current.Application["ConfigSite"];
    ViewBag.Title = config.Title;
    ViewBag.Description = config.Description;
    ViewBag.Canonical = Request.Url?.GetLeftPart(UriPartial.Authority) + Url.Action("Index");
    //var share = config.ImageShare ?? config.Image;
    //if (share != null)
    //{
    //    ViewBag.ImageShare = Request.Url?.GetLeftPart(UriPartial.Authority) + Path.Combine("/images/configs/", share);
    //}
}
<section class="banner">
    <div class="container">
        <div class="row">
            <div class="col-lg-8">
                @foreach (var item in Model.Banners.Where(a => a.GroupId == 1))
                {
                    <div class="list-banner">
                        <h2>@item.BannerName</h2>
                        <div class="slogan">
                            @Html.Raw(item.Content)
                        </div>
                        <a href="" class="btn-color">
                            tìm hiểu thêm
                            <div class="box-icon">
                                <i class="far fa-long-arrow-right"></i>
                            </div>
                        </a>
                        @if (item.Image != null)
                        {
                            <img src="@Path.Combine("/images/banners/", item.Image)" alt="@item.BannerName" class="img-banner" />
                        }
                    </div>
                }
            </div>
            <div class="col-lg-4 d-flex align-items-center">
                @Html.Action("Form")
            </div>
        </div>
    </div>
</section>
<section class="page-section ">
    <div class="container border-bottom pb-4">
        <div class="row">
            @foreach (var item in Model.Banners.Where(a => a.GroupId == 2))
            {
                <div class="col-lg-3">
                    <div class="d-flex intro">
                        @if (item.Image != null)
                        {
                            <img src="@Path.Combine("/images/banners/", item.Image)" alt="@item.BannerName" />
                        }
                        <h2>@Html.Raw(item.BannerName)</h2>
                    </div>
                </div>
            }
        </div>
    </div>
</section>
<section class="page-section">
    <h2 class="title">Dịch vụ của chúng tôi</h2>
    <p class="sub-title">Dịch vụ thuê xe có lái chuyên nghiệp – linh hoạt theo ngày / tháng / năm đáp ứng mọi nhu cầu di chuyển cá nhân.</p>
    <div class="container">
        <div class="service-slide">
            @foreach (var item in Model.Services)
            {
                var match = System.Text.RegularExpressions.Regex.Match(item.CategoryName, @"\d+");
                var seatCount = match.Success ? match.Value : null;
                <article>
                    <div class="tag">
                        <i class="fas fa-user"></i> @seatCount chỗ
                    </div>
                    <h2>@item.CategoryName</h2>
                    @if (item.Image != null)
                    {
                        <img src="~/Content/images/img-main/base64.gif" data-src="@Path.Combine("/images/articleCategory/", item.Image)" alt="@item.CategoryName" class="lazyload" />
                    }
                    <div class="row">
                        <div class="col-lg-6">
                            <a href="#" class="btn-blue">tìm hiểu thêm</a>
                        </div>
                        <div class="col-lg-6">
                            <a href="#" class="btn-orange">Đặt lịch ngay</a>
                        </div>
                    </div>
                </article>
            }
        </div>
    </div>
</section>
@section scripts{
    <script>
        homeJs()
    </script>
}