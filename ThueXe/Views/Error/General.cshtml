@using ThueXe.Models
@{ Layout = null; var config = (ConfigSite)HttpContext.Current.Application["ConfigSite"]; }
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>NotFound</title>
    @if (config.Favicon != null)
    {
        <link rel="shortcut icon" href="@Url.Content("~/images/configs/" + config.Favicon)" />
    }
    <meta name="robots" content="noindex" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;500;700&display=swap" rel="stylesheet">
</head>
<body>
    <style>
        html, body {
            margin: 0;
            padding: 0;
            text-align: center;
            font-family: sans-serif;
        }

        h1, a {
            margin: 0;
            padding: 0;
            text-decoration: none;
        }

        .section {
            height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            flex-direction: column;
        }

            .section .error {
                font-size: 150px;
                color: #FF4605;
                text-shadow: 1px 1px 1px #00593E, 2px 2px 1px #00593E, 3px 3px 1px #00593E, 4px 4px 1px #00593E, 5px 5px 1px #00593E, 6px 6px 1px #00593E, 7px 7px 1px #00593E, 8px 8px 1px #00593E, 25px 25px 8px rgba(0,0,0, 0.2);
            }

        .page {
            margin: 2rem 0;
            font-size: 20px;
            font-weight: 600;
            color: #444;
        }

        .back-home {
            display: inline-block;
            border: 2px solid #222;
            color: #fff;
            text-transform: uppercase;
            font-weight: 600;
            padding: 0.75rem 1rem 0.6rem;
            transition: all 0.2s linear;
            box-shadow: 0 15px 15px -11px rgba(0,0,0, 0.4);
            background: #222;
            border-radius: 6px;
        }

            .back-home:hover {
                background: #222;
                color: #ddd;
            }
    </style>
    <div class="section">
        <h1 class="error">500</h1>
        <div class="page">Opp !!!</div>
        <a class="back-home" href="/">Quay lại trang chủ</a>
    </div>
</body>
</html>