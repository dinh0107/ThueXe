@model ThueXe.ViewModel.PriceViewModel
@{
    ViewBag.Title = "Thêm giá";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div class="page-header">
    <div class="page-title">
        <i class="fa-solid fa-align-right fa-rotate-180 fa-sm"></i>
        <span>Thêm giá</span>
    </div>
    <a href="#" onclick="history.go(-1)" class="btn-main btn-labeled bg-brown">
        <span class="icon">
            <i class="fa-solid fa-left"></i>
        </span>
        Quay lại
    </a>
</div>
<div class="content">
    @if (ViewBag.ArticleCat == "success")
    {
        <div id="AlertBox" class="alert alert-success"><strong>Thêm mới danh mục thành công</strong></div>
    }
    @if (ViewBag.ArticleCat == "update")
    {
        <div id="AlertBox" class="alert alert-success"><strong>Cập nhật danh mục thành công</strong></div>
    }
    <div class="accordion">
        <div class="accordion-item border-left-slate">
            <div class="accordion-header">
                <div class="card-title">
                    <i class="fa-light fa-octagon-plus fa-lg"></i>
                    Thêm giá
                </div>
                <button type="button" data-bs-toggle="collapse" data-bs-target="#createForm" aria-expanded="true">
                    <i class="fa-solid fa-angle-down"></i>
                </button>
            </div>
            <div id="createForm" class="accordion-collapse collapse show">
                <div class="accordion-body">
                    @using (Html.BeginForm("AddPrice", "CarService", FormMethod.Post, new { @id = "data-insert-form", enctype = "multipart/form-data" }))
                    {
                        @Html.ValidationSummary(true)
                        @Html.HiddenFor(a => a.CarService.Id)
                        <div class="mb-3 row">
                            <label class="col-form-label col-lg-3" for="CategoryName">Lộ trình <span class="text-danger">*</span></label>
                            <div class="col-lg-9">
                                @Html.EditorFor(a => a.CarServicePrice.RouteDescription)
                            </div>
                        </div>
                        <div class="mb-3 row">
                            @Html.LabelFor(a => a.CarServicePrice.Km, new { @class = "col-form-label col-lg-3" })
                            <div class="col-lg-9">
                                @Html.EditorFor(a => a.CarServicePrice.Km)
                                @Html.ValidationMessageFor(a => Model.CarServicePrice.Km)
                            </div>
                        </div>
                        <div class="mb-3 row">
                            @Html.LabelFor(a => a.CarServicePrice.Price, new { @class = "col-form-label col-lg-3" })
                            <div class="col-lg-9">
                                @Html.EditorFor(a => a.CarServicePrice.Price)
                                @Html.ValidationMessageFor(a => Model.CarServicePrice.Price)
                            </div>
                        </div>
                        <div class="mb-3 row">
                            @Html.LabelFor(a => a.CarServicePrice.Sort, new { @class = "col-form-label col-lg-3" })
                            <div class="col-lg-9">
                                @Html.EditorFor(a => a.CarServicePrice.Sort)
                            </div>
                        </div>
                        <div class="mb-3 row">
                            @Html.LabelFor(a => a.CarServicePrice.Hot, new { @class = "col-form-label col-lg-3" })
                            <div class="col-lg-9">
                                <label class="form-check-label">
                                    <input type="checkbox" name="CarServicePrice.Hot" />
                                    <span class="checkmark"></span>
                                </label>
                            </div>
                        </div>
                        <div class="btn-group">
                            <button type="reset" onclick="resetAnyFormById('data-insert-form');" class="btn-main btn-white" id="reset">
                                <span>Đặt lại</span>
                                <i class="fa-solid fa-rotate-right ms-2"></i>
                            </button>
                            <button type="submit" class="btn-main btn-primary text-white ms-3">
                                <span>Lưu</span>
                                <i class="fa-solid fa-floppy-disk ms-2"></i>
                            </button>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>