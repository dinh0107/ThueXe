@model ThueXe.ViewModel.ListExpenseViewModel
@using PagedList.Mvc
@{
    ViewBag.Title = "Danh sách khoản chi";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div class="page-header">
    <div class="page-title">
        <i class="fa-solid fa-align-right fa-rotate-180 fa-sm"></i>
        <span>Danh sách khoản chi</span>
    </div>
    <div class="header-elements">
        <a href="@Url.Action("Expense")" class="btn-main btn-labeled btn-primary text-white">
            <span class="icon">
                <i class="fa-regular fa-plus fa-lg"></i>
            </span>
            Thêm mới
        </a>
        <a href="#" onclick="history.go(-1)" class="btn-main btn-labeled bg-brown ms-1">
            <span class="icon">
                <i class="fa-solid fa-left"></i>
            </span>
            Quay lại
        </a>
    </div>
</div>
<div class="content">
    <div class="accordion">
        <div class="accordion-item border-left-slate">
            <div class="accordion-header">
                <div class="card-title">
                    <i class="fa-regular fa-magnifying-glass fa-lg"></i>
                    Tìm kiếm
                </div>
                <button type="button" data-bs-toggle="collapse" data-bs-target="#searchForm" aria-expanded="true">
                    <i class="fa-solid fa-angle-down"></i>
                </button>
            </div>
            <div id="searchForm" class="accordion-collapse collapse show">
                <div class="accordion-body">
                    <form action="@Url.Action("ListExpense")" method="get" id="data-search-form">
                        <div class="row">
                            <div class="col-lg-3 mb-3">
                                <label class="mb-1">Ngày chi:</label>
                                @Html.EditorFor(a => a.CreateDate)
                            </div>
                            <div class="col-lg-3 mb-3">
                                <label class="mb-1">Người chi:</label>
                                <select name="DriverId" class="form_control select2">
                                    <option value="0">Tất cả</option>
                                    @foreach (var driver in Model.Drivers)
                                    {
                                        <option value="@driver.Id" @if (Model.DriverId == driver.Id) { @Html.Raw("selected") }>@driver.Name</option>
                                    }
                                </select>
                            </div>
                            <div class="col-lg-3 mb-3">
                                <label class="mb-1">Trạng thái:</label>
                                <select class="form_control" name="Status">
                                    <option value="-1" @if (Model.Status == -1) { @Html.Raw("selected") }>Tất cả</option>
                                    <option value="0" @if (Model.Status == 0) { @Html.Raw("selected") }>Chưa thanh toán</option>
                                    <option value="1" @if (Model.Status == 1) { @Html.Raw("selected") }>Đã thanh toán</option>
                                </select>
                            </div>
                        </div>
                        <div class="btn-group border-0 pt-0">
                            <button type="reset" onclick="resetAnyFormById('data-search-form');" class="btn-main btn-white" id="reset">
                                <span>Đặt lại</span>
                                <i class="fa-solid fa-rotate-right ms-2"></i>
                            </button>
                            <button type="submit" class="btn-main btn-primary text-white ms-3">
                                <span>Tìm kiếm</span>
                                <i class="fa-sharp fa-solid fa-paper-plane ms-2"></i>
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
        <div class="accordion-item border-left-slate">
            <div class="accordion-header">
                <div class="card-title">
                    <i class="fa-solid fa-list"></i>
                    Danh sách khoản chi
                </div>
                <button type="button" data-bs-toggle="collapse" data-bs-target="#listArticle" aria-expanded="true">
                    <i class="fa-solid fa-angle-down"></i>
                </button>
            </div>
            <div id="listArticle" class="accordion-collapse collapse show">
                <div class="accordion-body">
                    <p>Có tổng số <strong>@Model.Expenses.TotalItemCount</strong> khoản chi</p>
                    <table class="list_table tablecenter table-striped mb-4">
                        <tbody>
                            <tr>
                                <th>Xăng</th>
                                <th>Etc</th>
                                <th>Bảo dưỡng</th>
                                <th>Rửa xe</th>
                                <th>Khác</th>
                                <th>Tổng chi phí</th>
                            </tr>
                            <tr>
                                <td>@Convert.ToDecimal(Model.Gasoline).ToString("N0")<span>đ</span></td>
                                <td>@Convert.ToDecimal(Model.ETC).ToString("N0")<span>đ</span></td>
                                <td>@Convert.ToDecimal(Model.Maintenance).ToString("N0")<span>đ</span></td>
                                <td>@Convert.ToDecimal(Model.CarWash).ToString("N0")<span>đ</span></td>
                                <td>@Convert.ToDecimal(Model.Other).ToString("N0")<span>đ</span></td>
                                <td>@Convert.ToDecimal(Model.Total).ToString("N0")<span>đ</span></td>
                            </tr>
                        </tbody>
                    </table>
                    <div class="table-responsive">
                        <table class="list_table tablecenter table-striped">
                            <tbody>
                                <tr>
                                    <th>Ngày chi</th>
                                    <th>Khoản chi</th>
                                    <th>Người chi</th>
                                    <th>Giá</th>
                                    <th>Trạng thái</th>
                                    <th>Ghi chú</th>
                                    <th style="width: 100px"></th>
                                </tr>
                                @foreach (var expense in Model.Expenses)
                                {
                                    <tr data-id="@expense.Id">
                                        <td>@expense.CreateDate.ToString("dd/MM/yyyy")</td>
                                        <td>@Html.DisplayFor(a => expense.Expenditure)</td>
                                        <td>@expense.Driver.Name</td>
                                        <td>@Convert.ToDecimal(expense.Price).ToString("N0")<span>đ</span></td>
                                        <td>@Html.DisplayFor(a => expense.Status)</td>
                                        <td>@expense.Note</td>
                                        <td class="action-col">
                                            @Html.ActionLink("Sửa", "UpdateExpense", new { expenseId = expense.Id }) -
                                            <a href="javascript:;" onclick="deleteExpense('@expense.Id')" style="color: red;">Xóa</a>
                                        </td>
                                    </tr>
                                }
                                @if (Model.Expenses.PageCount > 1)
                                {
                                    <tr>
                                        <td colspan="14">@Html.PagedListPager(Model.Expenses, page => Url.Action("ListExpense", new { page, createDate = Model.CreateDate, driverId = Model.DriverId, status = Model.Status }))</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section scripts
{
    <script src="~/Scripts/moment.min.js"></script>
    <script src="~/Scripts/daterangepicker.js"></script>
    <script type="text/javascript">
        $('.datepicker').daterangepicker({
            autoUpdateInput: false,
            autoApply: true,
            showDropdowns: true,
            minYear: 2022,
            maxYear: parseInt(moment().format('YYYY'), 10) + 5,
            locale: {
                format: 'DD/MM/YYYY'
            }
        }).on("apply.daterangepicker", function (e, picker) {
            picker.element.val(picker.startDate.format(picker.locale.format) + ' - ' + picker.endDate.format(picker.locale.format));
        });

        function deleteExpense(id) {
            if (confirm("Bạn có chắc chắn xóa khoản chi này không?")) {
                $.post("/Mms/DeleteExpense", { expenseId: id }, function (data) {
                    if (data) {
                        $.toast({
                            text: 'Xóa khoản chi thành công',
                            position: 'bottom-right',
                            icon: 'success',
                        })
                        $("tr[data-id='" + id + "']").fadeOut();
                    }
                    else {
                        $.toast({
                            text: 'Quá trình thực hiện không thành công. Hãy thử lại',
                            icon: 'error',
                        })
                    }
                });
            }
        }
    </script>
}


