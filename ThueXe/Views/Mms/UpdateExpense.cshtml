@model ThueXe.ViewModel.InsertExpenseViewModel
@{
    ViewBag.Title = "Cập nhật khoản chi";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="page-header">
    <div class="page-title">
        <i class="fa-solid fa-align-right fa-rotate-180 fa-sm"></i>
        <span>Cập nhật khoản chi</span>
    </div>
    <a href="#" onclick="history.go(-1)" class="btn-main btn-labeled bg-brown">
        <span class="icon">
            <i class="fa-solid fa-left"></i>
        </span>
        Quay lại
    </a>
</div>
<div class="content">
    <div class="accordion">
        <div class="accordion-item border-left-slate">
            <div class="accordion-header">
                <div class="card-title">
                    <i class="fa-light fa-pen-to-square fa-lg"></i>
                    Cập nhật khoản chi
                </div>
                <button type="button" data-bs-toggle="collapse" data-bs-target="#editForm" aria-expanded="true">
                    <i class="fa-solid fa-angle-down"></i>
                </button>
            </div>
            <div id="editForm" class="accordion-collapse collapse show">
                <div class="accordion-body">
                    @using (Html.BeginForm("UpdateExpense", "Mms", FormMethod.Post, new { enctype = "multipart/form-data" }))
                    {
                        @Html.AntiForgeryToken()
                        @Html.ValidationSummary(true)
                        @Html.HiddenFor(a => a.Expense.Id)

                        <div class="mb-3 row">
                            <label class="col-form-label col-lg-3" for="Expense_DriverId">Người chi <span class="text-danger">*</span></label>
                            <div class="col-lg-9">
                                @Html.DropDownListFor(a => a.Expense.DriverId, new SelectList(Model.Drivers, "Id", "Name"), "Chọn người chi", new { @class = "form_control" })
                                @Html.ValidationMessageFor(a => a.Expense.DriverId)
                            </div>
                        </div>
                        <div class="mb-3 row">
                            <label class="col-form-label col-lg-3" for="CreateDate">Ngày chi <span class="text-danger">*</span></label>
                            <div class="col-lg-9">
                                @Html.EditorFor(a => a.CreateDate)
                            </div>
                        </div>
                        <div class="mb-3 row">
                            @Html.LabelFor(a => a.Expense.Expenditure, new { @class = "col-form-label col-lg-3" })
                            <div class="col-lg-9">
                                @Html.EnumDropDownListFor(a => a.Expense.Expenditure)
                            </div>
                        </div>
                        <div class="mb-3 row">
                            <label class="col-form-label col-lg-3" for="Price">Giá <span class="text-danger">*</span></label>
                            <div class="col-lg-9">
                                @Html.EditorFor(a => a.Price)
                            </div>
                        </div>
                        <div class="mb-3 row">
                            @Html.LabelFor(a => a.Expense.Status, new { @class = "col-form-label col-lg-3" })
                            <div class="col-lg-9">
                                @Html.EnumDropDownListFor(a => a.Expense.Status)
                            </div>
                        </div>
                        <div class="mb-3 row">
                            @Html.LabelFor(a => a.Expense.Note, new { @class = "col-form-label col-lg-3" })
                            <div class="col-lg-9">
                                @Html.EditorFor(a => a.Expense.Note)
                            </div>
                        </div>
                        <div class="btn-group">
                            <button type="submit" class="btn-main btn-primary text-white">
                                <span>Lưu</span>
                                <i class="fa-solid fa-floppy-disk ms-2"></i>
                            </button>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
@section scripts{
    <script src="~/Scripts/jquery.maskMoney.min.js"></script>
    <script src="~/Scripts/moment.min.js"></script>
    <script src="~/Scripts/daterangepicker.js"></script>
    <script>
        $(function () {
            $(".input-number").maskMoney({
                precision: 0,
                thousands: '.'
            });

            $('.datepicker').daterangepicker({
                autoUpdateInput: false,
                singleDatePicker: true,
                autoApply: true,
                showDropdowns: true,
                minYear: 2024,
                maxYear: parseInt(moment().format('YYYY'), 10) + 5,
                locale: {
                    format: 'DD/MM/YYYY'
                }
            }).on("apply.daterangepicker", function (e, picker) {
                picker.element.val(picker.startDate.format(picker.locale.format));
            });
        });
    </script>
}