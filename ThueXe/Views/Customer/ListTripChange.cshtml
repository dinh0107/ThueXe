@model ThueXe.ViewModel.ListTripViewModel
@using PagedList.Mvc
@using Helpers
@{
    ViewBag.Title = "Danh sách chuyến chuyển";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div class="page-header">
    <div class="page-title">
        <i class="fa-solid fa-align-right fa-rotate-180 fa-sm"></i>
        <span>Danh sách chuyến chuyển</span>
    </div>
    <div class="header-elements">
        <a href="#" onclick="history.go(-1)" class="btn-main btn-labeled bg-brown ms-1">
            <span class="icon">
                <i class="fa-solid fa-left"></i>
            </span>
            Quay lại
        </a>
    </div>
</div>
<div class="content">
    @if (ViewBag.Result == "update")
    {
        <div id="AlertBox" class="alert alert-success"><strong>Cập nhật chuyến đi thành công</strong></div>
    }
    <div class="accordion">
        <div class="accordion-item border-left-slate">
            <div class="accordion-header">
                <div class="card-title">
                    <i class="fa-regular fa-magnifying-glass fa-lg"></i>
                    Tìm kiếm
                </div>
                <button type="button" data-bs-toggle="collapse" data-bs-target="#searchForm" aria-expanded="true">
                    <i class="fa-solid fa-angle-down"></i>
                </button>
            </div>
            <div id="searchForm" class="accordion-collapse collapse show">
                <div class="accordion-body">
                    <form action="@Url.Action("ListTripChange")" method="get" id="data-search-form">
                        <div class="row">
                            <div class="col-lg-3 mb-3">
                                <label class="mb-1">Mã KH:</label>
                                @Html.TextBoxFor(a => a.Code, new { @class = "form_control" })
                            </div>
                            <div class="col-lg-3 mb-3">
                                <label class="mb-1">Số điện thoại:</label>
                                @Html.TextBoxFor(a => a.Mobile, new { @class = "form_control" })
                            </div>
                            <div class="col-lg-3 mb-3 search-customer">
                                <label class="mb-1">Tên KH:</label>
                                <select name="CustomerId" class="form_control select2">
                                    <option value="0">Tất cả KH</option>
                                    @foreach (var customer in Model.Customers)
                                    {
                                        <option value="@customer.Id" @if (Model.CustomerId == customer.Id) { @Html.Raw("selected") }>@customer.Name</option>
                                    }
                                </select>
                            </div>
                            <div class="col-lg-3 mb-3">
                                <label class="mb-1">Trạng thái:</label>
                                <select class="form_control" name="Status">
                                    <option value="-1" @if (Model.Status == -1) { @Html.Raw("selected") }>Tất cả</option>
                                    <option value="0" @if (Model.Status == 0) { @Html.Raw("selected") }>Chốt</option>
                                    <option value="1" @if (Model.Status == 1) { @Html.Raw("selected") }>Cọc</option>
                                    <option value="2" @if (Model.Status == 2) { @Html.Raw("selected") }>Đang chạy</option>
                                    <option value="3" @if (Model.Status == 3) { @Html.Raw("selected") }>Hoàn thành</option>
                                    <option value="4" @if (Model.Status == 4) { @Html.Raw("selected") }>Hủy</option>
                                </select>
                            </div>
                            <div class="col-lg-3 mb-3">
                                <label class="mb-1">Thời gian:</label>
                                <select class="form_control" name="Time">
                                    <option value="all" @if (Model.Time == "all") { @Html.Raw("selected") }>Tất cả</option>
                                    <option value="today" @if (Model.Time == "today") { @Html.Raw("selected") }>Hôm nay</option>
                                    <option value="tomorrow" @if (Model.Time == "tomorrow") { @Html.Raw("selected") }>Ngày mai</option>
                                    <option value="week" @if (Model.Time == "week") { @Html.Raw("selected") }>Tuần này</option>
                                    <option value="nextweek" @if (Model.Time == "nextweek") { @Html.Raw("selected") }>Tuần sau</option>
                                    <option value="month" @if (Model.Time == "month") { @Html.Raw("selected") }>Tháng này</option>
                                    <option value="year" @if (Model.Time == "year") { @Html.Raw("selected") }>Năm nay</option>
                                </select>
                            </div>
                        </div>
                        <div class="btn-group border-0 pt-0">
                            <button type="reset" onclick="resetAnyFormById('data-search-form');" class="btn-main btn-white" id="reset">
                                <span>Đặt lại</span>
                                <i class="fa-solid fa-rotate-right ms-2"></i>
                            </button>
                            <button type="submit" class="btn-main btn-primary text-white ms-3">
                                <span>Tìm kiếm</span>
                                <i class="fa-sharp fa-solid fa-paper-plane ms-2"></i>
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
        <div class="accordion-item border-left-slate">
            <div class="accordion-header">
                <div class="card-title">
                    <i class="fa-solid fa-list"></i>
                    Danh sách chuyến chuyển
                </div>
                <button type="button" data-bs-toggle="collapse" data-bs-target="#listArticle" aria-expanded="true">
                    <i class="fa-solid fa-angle-down"></i>
                </button>
            </div>
            <div id="listArticle" class="accordion-collapse collapse show">
                <div class="accordion-body">
                    <p>Có tổng số <strong>@Model.Trips.TotalItemCount</strong> chuyến đi</p>
                    <table class="list_table tablecenter table-striped mb-4">
                        <tbody>
                            <tr>
                                <th>Tổng báo giá</th>
                                <th>Tổng giá chuyển</th>
                                <th>Thực thu</th>
                            </tr>
                            <tr>
                                <td>@Convert.ToDecimal(Model.TotalSales).ToString("N0")<span>đ</span></td>
                                <td>@Convert.ToDecimal(Model.PriceChange).ToString("N0")<span>đ</span></td>
                                <td>@Convert.ToDecimal(Model.ActualRevenue).ToString("N0")<span>đ</span></td>
                            </tr>
                        </tbody>
                    </table>
                    <div class="table-responsive">
                        <table class="list_table tablecenter table-striped">
                            <tbody>
                                <tr>
                                    <th>Khách hàng</th>
                                    <th>Điểm đi</th>
                                    <th>Điểm đến</th>
                                    <th>Ngày đi</th>
                                    <th>Ngày về</th>
                                    <th>Loại xe</th>
                                    <th>Nguồn</th>
                                    <th>Trạng thái</th>
                                    <th>Giá</th>
                                    <th>Cọc</th>
                                    <th>Giá chuyển</th>
                                    <th>Thực thu</th>
                                    <th>Ghi chú</th>
                                    <th style="width: 100px"></th>
                                </tr>
                                @foreach (var trip in Model.Trips)
                                {
                                    <tr data-id="@trip.Id">
                                        <td>
                                            <a href="javascript:;" data-src="@Url.Action("ListTripCustomer", new { customerId = trip.CustomerId })" data-fancybox data-type="ajax" data-touch="false">@trip.Customer.Code-@trip.Customer.Name</a>
                                        </td>
                                        <td>@trip.From</td>
                                        <td>@trip.To</td>
                                        <td>@Html.DisplayFor(a => trip.FromDate)</td>
                                        <td>@Html.DisplayFor(a => trip.ToDate)</td>
                                        <td>@Html.DisplayFor(a => trip.TypeCar)</td>
                                        <td>@Html.DisplayFor(a => trip.Source)</td>
                                        <td>@Html.DisplayFor(a => trip.Status)</td>
                                        <td>@Convert.ToDecimal(trip.Price).ToString("N0")</td>
                                        <td>@Convert.ToDecimal(trip.Pile).ToString("N0")</td>
                                        <td>@Convert.ToDecimal(trip.PriceChange).ToString("N0")</td>
                                        <td>@Convert.ToDecimal(trip.ActualRevenue()).ToString("N0")</td>
                                        <td>@Html.Raw(HtmlHelpers.ReplaceLine(trip.Note))</td>
                                        <td class="action-col">
                                            @Html.ActionLink("Sửa", "UpdateTrip", new { tripId = trip.Id }) -
                                            <a href="javascript:;" onclick="deleteTrip('@trip.Id')" style="color: red;">Xóa</a>
                                        </td>
                                    </tr>
                                }
                                @if (Model.Trips.PageCount > 1)
                                {
                                    <tr>
                                        <td colspan="14">@Html.PagedListPager(Model.Trips, page => Url.Action("ListTripChange", new { page, code = Model.Code, mobile = Model.Mobile, customerId = Model.CustomerId, status = Model.Status, time = Model.Time }))</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section scripts
{
    <script src="~/Scripts/select2.js"></script>
    <script type="text/javascript">
        $('.select2').select2();

        function deleteTrip(id) {
            if (confirm("Bạn có chắc chắn xóa chuyến đi này không?")) {
                $.post("/Customer/DeleteTrip", { tripId: id }, function (data) {
                    if (data) {
                        $.toast({
                            text: 'Xóa chuyến đi thành công',
                            position: 'bottom-right',
                            icon: 'success',
                        })
                        $("tr[data-id='" + id + "']").fadeOut();
                    }
                    else {
                        $.toast({
                            text: 'Quá trình thực hiện không thành công. Hãy thử lại',
                            icon: 'error',
                        })
                    }
                });
            }
        }
    </script>
}


