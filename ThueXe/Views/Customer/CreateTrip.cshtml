@model ThueXe.ViewModel.TripViewModel
@{
    ViewBag.Title = "Thêm mới chuyến đi";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="page-header">
    <div class="page-title">
        <i class="fa-solid fa-align-right fa-rotate-180 fa-sm"></i>
        <span>Thêm mới chuyến đi</span>
    </div>
    <a href="#" onclick="history.go(-1)" class="btn-main btn-labeled bg-brown">
        <span class="icon">
            <i class="fa-solid fa-left"></i>
        </span>
        Quay lại
    </a>
</div>
<div class="content">
    <div class="accordion">
        <div class="accordion-item border-left-slate">
            <div class="accordion-header">
                <div class="card-title">
                    <i class="fa-light fa-pen-to-square fa-lg"></i>
                    Thêm mới chuyến đi
                </div>
                <button type="button" data-bs-toggle="collapse" data-bs-target="#editForm" aria-expanded="true">
                    <i class="fa-solid fa-angle-down"></i>
                </button>
            </div>
            <div id="editForm" class="accordion-collapse collapse show">
                <div class="accordion-body">
                    @using (Html.BeginForm("CreateTrip", "Customer", FormMethod.Post, new { enctype = "multipart/form-data" }))
                    {
                        @Html.AntiForgeryToken()
                        @Html.ValidationSummary(true)
                        @Html.HiddenFor(a => a.CustomerId)

                        <div class="mb-3 row">
                            @Html.LabelFor(a => a.Trip.TypeTrip, new { @class = "col-form-label col-lg-3" })
                            <div class="col-lg-9">
                                @Html.EnumDropDownListFor(a => a.Trip.TypeTrip)
                            </div>
                        </div>
                        <div class="mb-3 row">
                            @Html.LabelFor(a => a.Trip.Source, new { @class = "col-form-label col-lg-3" })
                            <div class="col-lg-9">
                                @Html.EnumDropDownListFor(a => a.Trip.Source)
                            </div>
                        </div>
                        <div class="mb-3 row">
                            <label class="col-form-label col-lg-3" for="DriverId">Lái xe <span class="text-danger">*</span></label>
                            <div class="col-lg-9">
                                @Html.DropDownListFor(a => a.DriverId, new SelectList(Model.Drivers, "Id", "Name"), "Chọn lái xe", new { @class = "form_control" })
                                @Html.ValidationMessageFor(a => a.DriverId)
                            </div>
                        </div>
                        <div class="mb-3 row">
                            @Html.LabelFor(a => a.Trip.TypeCar, new { @class = "col-form-label col-lg-3" })
                            <div class="col-lg-9">
                                @Html.EnumDropDownListFor(a => a.Trip.TypeCar)
                            </div>
                        </div>
                        <div class="mb-3 row">
                            <label class="col-form-label col-lg-3" for="Trip_From">Điểm đi <span class="text-danger">*</span></label>
                            <div class="col-lg-9">
                                @Html.EditorFor(a => a.Trip.From)
                                @Html.ValidationMessageFor(a => a.Trip.From)
                            </div>
                        </div>
                        <div class="mb-3 row">
                            <label class="col-form-label col-lg-3" for="Trip_To">Điểm đến <span class="text-danger">*</span></label>
                            <div class="col-lg-9">
                                @Html.EditorFor(a => a.Trip.To)
                                @Html.ValidationMessageFor(a => a.Trip.To)
                            </div>
                        </div>
                        <div class="mb-3 row">
                            <label class="col-form-label col-lg-3" for="FromDate">Ngày đi <span class="text-danger">*</span></label>
                            <div class="col-lg-9">
                                @Html.EditorFor(a => a.FromDate)
                            </div>
                        </div>
                        <div class="mb-3 row">
                            @Html.LabelFor(a => a.ToDate, new { @class = "col-form-label col-lg-3" })
                            <div class="col-lg-9">
                                @Html.EditorFor(a => a.ToDate)
                            </div>
                        </div>
                        <div class="mb-3 row">
                            @Html.LabelFor(a => a.Trip.Status, new { @class = "col-form-label col-lg-3" })
                            <div class="col-lg-9">
                                @Html.EnumDropDownListFor(a => a.Trip.Status)
                            </div>
                        </div>
                        <div class="mb-3 row" id="distance">
                            @Html.LabelFor(a => a.Trip.Distance, new { @class = "col-form-label col-lg-3" })
                            <div class="col-lg-9">
                                @Html.EditorFor(a => a.Trip.Distance)
                            </div>
                        </div>
                        <div class="mb-3 row">
                            @Html.LabelFor(a => a.Price, new { @class = "col-form-label col-lg-3" })
                            <div class="col-lg-9">
                                @Html.EditorFor(a => a.Price)
                            </div>
                        </div>
                        <div class="mb-3 row">
                            @Html.LabelFor(a => a.Pile, new { @class = "col-form-label col-lg-3" })
                            <div class="col-lg-9">
                                @Html.EditorFor(a => a.Pile)
                            </div>
                        </div>
                        <div class="mb-3 row" id="priceChange" style="display: none">
                            @Html.LabelFor(a => a.PriceChange, new { @class = "col-form-label col-lg-3" })
                            <div class="col-lg-9">
                                @Html.EditorFor(a => a.PriceChange)
                            </div>
                        </div>
                        <div class="mb-3 row" id="priceSale">
                            @Html.LabelFor(a => a.PriceSale, new { @class = "col-form-label col-lg-3" })
                            <div class="col-lg-9">
                                @Html.EditorFor(a => a.PriceSale)
                            </div>
                        </div>
                        <div class="mb-3 row" id="tolls">
                            @Html.LabelFor(a => a.Tolls, new { @class = "col-form-label col-lg-3" })
                            <div class="col-lg-9">
                                @Html.EditorFor(a => a.Tolls)
                            </div>
                        </div>
                        <div class="mb-3 row" id="other">
                            @Html.LabelFor(a => a.Other, new { @class = "col-form-label col-lg-3" })
                            <div class="col-lg-9">
                                @Html.EditorFor(a => a.Other)
                            </div>
                        </div>
                        <div class="mb-3 row">
                            @Html.LabelFor(a => a.Trip.Note, new { @class = "col-form-label col-lg-3" })
                            <div class="col-lg-9">
                                @Html.EditorFor(a => a.Trip.Note)
                            </div>
                        </div>
                        <div class="mb-3 row">
                            @Html.LabelFor(a => a.Trip.Active, new { @class = "col-form-label col-lg-3" })
                            <div class="col-lg-9">
                                <label class="form-check-label">
                                    <input type="checkbox" name="Trip.Active" checked value="true" />
                                    <span class="checkmark"></span>
                                </label>
                            </div>
                        </div>
                        <div class="btn-group">
                            <button type="submit" class="btn-main btn-primary text-white">
                                <span>Lưu</span>
                                <i class="fa-solid fa-floppy-disk ms-2"></i>
                            </button>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
@section scripts{
    <script src="~/Scripts/jquery.maskMoney.min.js"></script>
    <script src="~/Scripts/moment.min.js"></script>
    <script src="~/Scripts/daterangepicker.js"></script>
    <script>
        $(function () {
            $(".input-number").maskMoney({
                precision: 0,
                thousands: '.'
            });

            $("#Trip_TypeTrip").on("change", function () {
                var value = parseInt($("#Trip_TypeTrip").val());
                if (value == 1) {
                    $("#priceChange").show();
                    $("#distance, #priceSale, #tolls, #other").hide();
                    $('#DriverId').val("4");
                }
                else {
                    $("#priceChange").hide();
                    $("#distance, #priceSale, #tolls, #other").show();
                    $('#DriverId').val("");
                }
            });

            $('.datepicker').daterangepicker({
                timePicker: true,
                timePicker24Hour: true,
                timePickerIncrement: 15,
                autoUpdateInput: false,
                singleDatePicker: true,
                autoApply: true,
                showDropdowns: true,
                minYear: 2025,
                maxYear: parseInt(moment().format('YYYY'), 10) + 5,
                locale: {
                    format: 'DD/MM/YYYY HH:mm'
                }
            }).on("apply.daterangepicker", function (e, picker) {
                picker.element.val(picker.startDate.format(picker.locale.format));
            });
        });
    </script>
}